<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/very_light_brown">  <!-- Цвет эффекта при нажатии -->

    <!-- Градиентный фон (виден всегда) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/brown_2"
                android:endColor="@color/medium_brown_2"
                android:angle="180"
                android:type="linear" />

            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/brown_45" />
        </shape>
    </item>
</ripple>