<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_brown"
    tools:context=".settings.ui.activity.SettingsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView android:id="@+id/avatarContainer"
        android:layout_width="@dimen/avatar"
        android:layout_height="@dimen/avatar"
        app:cardCornerRadius="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_80">

        <ImageView android:id="@+id/avatar"
            android:layout_width="@dimen/avatar"
            android:layout_height="@dimen/avatar"
            android:src="@drawable/placeholder"
            android:background="@color/brown_2"
            android:padding="2dp"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView android:id="@+id/userNameText"
        style="@style/Text.OnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarContainer"
        android:layout_marginTop="@dimen/margin_8"
        tools:text="Лора Робертс"/>

    <ImageView android:id="@+id/nameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:src="@drawable/ic_edit"
        app:tint="@color/brown_2"
        app:layout_constraintStart_toEndOf="@id/userNameText"
        app:layout_constraintBottom_toBottomOf="@id/userNameText"/>

    <!--TextView android:id="@+id/settingsHead"
        style="@style/Text.SettingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/userNameText"
        android:layout_marginTop="38dp"
        android:text="@string/settings"/-->

    <ImageView android:id="@+id/emailIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_46"
        android:src="@drawable/ic_email"
        app:tint="@color/brown_2"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/userNameText"/>

    <TextView android:id="@+id/email"
        style="@style/Text.Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@id/emailIC"
        app:layout_constraintTop_toTopOf="@id/emailIC"
        tools:text="Email"
        />


    <TextView
        android:id="@+id/logoutBtn"
        style="@style/Text.SettingLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_marginTop="@dimen/margin_36"
        app:layout_constraintEnd_toStartOf="@id/logoutImg"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginEnd="@dimen/margin_10"/>

    <ImageView android:id="@+id/logoutImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintTop_toTopOf="@id/logoutBtn"
        app:layout_constraintBottom_toBottomOf="@id/logoutBtn"
        android:src="@drawable/fi_ss_sign_in"
        app:tint="@color/medium_brown_2"
        />

    <View android:id="@+id/bottomContainer"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_container_height"
        android:background="@drawable/background"
        android:elevation="@dimen/elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView android:id="@+id/slide"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:src="@drawable/btn_gradient"
        app:layout_constraintTop_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="@id/settingsLabel"
        app:layout_constraintEnd_toEndOf="@id/settingsLabel"
        android:elevation ="@dimen/elevation"/>

    <ImageView android:id="@+id/libraryBtn"
        style="@style/IconNotActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_books"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintTop_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="@id/libraryLabel"
        app:layout_constraintEnd_toEndOf="@id/libraryLabel"
        android:elevation ="@dimen/elevation"/>

    <TextView android:id="@+id/libraryLabel"
        style="@style/Text.BottomIC.NotActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_22"
        android:layout_marginTop="@dimen/margin_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/libraryBtn"
        android:text="@string/library"
        android:elevation ="@dimen/elevation"/>

    <ImageView android:id="@+id/wishlistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_not_active"
        app:layout_constraintTop_toTopOf="@id/libraryBtn"
        app:layout_constraintStart_toStartOf="@id/wishlistLabel"
        app:layout_constraintEnd_toEndOf="@id/wishlistLabel"
        android:elevation ="@dimen/elevation"/>

    <TextView android:id="@+id/wishlistLabel"
        style="@style/Text.BottomIC.NotActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/libraryLabel"
        app:layout_constraintBottom_toBottomOf="@id/libraryLabel"
        app:layout_constraintEnd_toStartOf="@id/settingsLabel"
        android:text="@string/wishlist"
        android:elevation ="@dimen/elevation"/>

    <ImageView android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="@id/libraryBtn"
        app:layout_constraintStart_toStartOf="@id/settingsLabel"
        app:layout_constraintEnd_toEndOf="@id/settingsLabel"
        android:elevation ="@dimen/elevation"/>

    <TextView android:id="@+id/settingsLabel"
        style="@style/Text.BottomIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/libraryLabel"
        android:text="@string/profile"
        android:elevation ="@dimen/elevation"/>
</androidx.constraintlayout.widget.ConstraintLayout>