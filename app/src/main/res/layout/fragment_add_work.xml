<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".add_book.ui.fragment.AddWorkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <AutoCompleteTextView
            android:id="@+id/actAuthor"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Автор произведения" />

        <Button
            android:id="@+id/btnNewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить нового автора" />

        <AutoCompleteTextView
            android:id="@+id/actWorkTitle"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название произведения" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить произведение" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
