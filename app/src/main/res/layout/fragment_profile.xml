<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_brown"
    tools:context=".profile.ui.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_border"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_border"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar_container"
        android:layout_width="@dimen/avatar"
        android:layout_height="@dimen/avatar"
        app:cardCornerRadius="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_60">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/avatar"
            android:layout_height="@dimen/avatar"
            android:background="@color/brown_75"
            android:padding="2dp"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_name"
        style="@style/Text.22.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Name"
        android:drawableEnd="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintEnd_toEndOf="@id/right_border"
        app:layout_constraintTop_toBottomOf="@id/cv_avatar_container"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_email"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_46"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:drawableTint="@color/brown"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintEnd_toStartOf="@id/tv_email"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        tools:text="Email" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/ButtonBorderless.Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/logout"
        app:icon="@drawable/ic_sign_in"
        app:layout_constraintEnd_toEndOf="@id/right_border"
        app:layout_constraintTop_toBottomOf="@id/tv_email" />


</androidx.constraintlayout.widget.ConstraintLayout>