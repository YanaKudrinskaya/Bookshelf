<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_brown"
    android:paddingVertical="@dimen/margin_60"
    tools:context=".profile.ui.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView android:id="@+id/cvAvatarContainer"
        android:layout_width="@dimen/avatar"
        android:layout_height="@dimen/avatar"
        app:cardCornerRadius="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_60">

        <ImageView android:id="@+id/ivAvatar"
            android:layout_width="@dimen/avatar"
            android:layout_height="@dimen/avatar"
            android:src="@drawable/placeholder"
            android:background="@color/brown_2"
            android:padding="2dp"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView android:id="@+id/tvUserName"
        style="@style/Text.SettingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/brown"
        tools:text = "Name"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintTop_toBottomOf="@id/cvAvatarContainer"/>

    <ImageView android:id="@+id/ivNameChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:src="@drawable/ic_edit"
        app:tint="@color/brown_2"
        app:layout_constraintStart_toEndOf="@id/tvUserName"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@id/tvUserName"/>

    <ImageView android:id="@+id/ivEmailIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_46"
        android:src="@drawable/ic_email"
        app:tint="@color/brown_2"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"/>

    <TextView
        android:id="@+id/tvEmail"
        style="@style/Text.Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmailIcon"
        app:layout_constraintStart_toEndOf="@id/ivEmailIcon"
        app:layout_constraintTop_toTopOf="@id/ivEmailIcon"
        tools:text="Email" />


    <TextView
        android:id="@+id/tvLogoutBtn"
        style="@style/Text.SettingLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_marginTop="@dimen/margin_36"
        app:layout_constraintEnd_toStartOf="@id/ivlogoutIcon"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        android:layout_marginEnd="@dimen/margin_10"/>

    <ImageView android:id="@+id/ivlogoutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintTop_toTopOf="@id/tvLogoutBtn"
        app:layout_constraintBottom_toBottomOf="@id/tvLogoutBtn"
        android:src="@drawable/fi_ss_sign_in"
        app:tint="@color/medium_brown_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>