<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="fontFamily">@font/vollda</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Text.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.16.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Text.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.22.Icon">
        <item name="android:drawableTint">?attr/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/medium_brown_2</item>
    </style>

    <style name="Text.22.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Text.32">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.AuthSec">
        <item name="android:textColor">@color/brown_50</item>
    </style>

    <style name="Text.16.Medium">
        <item name="android:textColor">@color/brown_75</item>
    </style>

    <style name="Text.OnBoarding">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar</item>
        <item name="android:layout_height">@dimen/progress_bar</item>
        <item name="android:indeterminateTint">@color/brown</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColor">@color/brown_50</item>
    </style>

    <style name="ButtonBorderless.Profile">
        <item name="android:textAppearance">@style/Text.20</item>
        <item name="android:textColor">@color/brown_75</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/margin_8</item>
        <item name="iconTint">@color/brown_75</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="Button.Outlined.Light" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color_state</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/hint_color_state</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="cursorErrorColor">?attr/colorPrimary</item>
        <item name="endIconTint">@color/hint_color_state</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_8</item>
    </style>

    <style name="TextInputLayout.Search">
        <item name="startIconTint">@color/brown_50</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_28</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_28</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_28</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_28</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="TextInputLayout.Light">
        <item name="boxStrokeColor">@color/box_stroke_color_state_light</item>
        <item name="cursorColor">?attr/colorOnPrimary</item>
        <item name="cursorErrorColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">@color/hint_color_state_light</item>
        <item name="endIconTint">@color/hint_color_state_light</item>
    </style>

    <style name="TextInputLayout.Light.NoActive">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_forward</item>
    </style>

    <style name="Text.InputEditText">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSelectHandleLeft">@drawable/transparent_drawable</item>
        <item name="android:textSelectHandleRight">@drawable/transparent_drawable</item>
        <item name="android:textSelectHandle">@drawable/transparent_drawable</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Text.InputEditText.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Text.InputEditText.Light.NoActive">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="endIconDrawable">@drawable/ic_forward</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemTextAppearanceActive">@style/Text.14</item>
        <item name="itemTextAppearanceInactive">@style/Text.14</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
    </style>
</resources>