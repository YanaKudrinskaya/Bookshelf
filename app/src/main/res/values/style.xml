<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:fontFamily">@font/vollda</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.TextViewBtn">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Text.TextViewBtn.Border">
        <item name="android:textColor">@color/brown_75</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_border</item>
    </style>

    <style name="Text.TextViewBtn.Gradient">
        <item name="android:textColor">@color/light_brown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btn_gradient</item>
    </style>

    <style name="Text.BookItem">
        <item name="android:textColor">@color/brown_2</item>
    </style>
    <style name="Text.BookItem.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.BookItem.Author">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Auth">
        <item name="android:textColor">@color/brown_75</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.SettingLabel">
        <item name="android:textColor">@color/brown_2</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Settings">
        <item name="android:textColor">@color/brown_2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.SettingLogout">
        <item name="android:textColor">@color/medium_brown_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.AuthSec">
        <item name="android:textColor">@color/brown_50</item>
    </style>
    <style name="Text.BottomIC">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.BottomIC.NotActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.EditText">
        <item name="android:textColor">@color/brown</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/brown_50</item>
        <item name="android:textCursorDrawable">@drawable/brown_cursor</item>
    </style>

    <style name="Text.EditText.Login">
        <item name="colorControlActivated">@color/brown</item>
        <item name="android:background">@drawable/login_border</item>
    </style>

    <style name="Text.EditText.Search">
        <item name="android:background">@drawable/search_border</item>
    </style>

    <style name="Text.OnBoarding">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="IconNotActive">
        <item name="tint">@color/gray</item>
    </style>

</resources>